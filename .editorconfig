# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf
charset = utf-8
insert_final_newline = true

[*.{ts,js}]
indent_size = 4
tab_width = 4
quote_type = single
max_line_length = 120
trim_trailing_whitespace = true
